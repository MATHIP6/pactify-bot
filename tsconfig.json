{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    }
}
